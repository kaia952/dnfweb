doctype
html
    head
        meta(charset="utf-8")
        title 地下城详情
        script(src="/public/js/jquery-3.3.1.min.js")
        link(href="/public/css/reset.css" rel="stylesheet")
        link(href="/public/css/common.css" rel="stylesheet")
        link(href="/public/css/dungeon.css" rel="stylesheet")
    body
        div.main-container
            each dungeon in result
                div.dungeon-title.clearfix
                    h1 #{dungeon.name}
                    a.returnToList(href="http://127.0.0.1:8081/dungeonlist") 返回地下城列表
                div.content.clearfix
                    div.part.clearfix
                        img(src=dungeon.imgsrc)
                        ul.info-list
                            li
                                span 位置：
                                span #{dungeon.position}
                            li
                                span 首领：
                                span #{dungeon.boss}
                    div.part.part-intro
                        h2 介绍
                        p.intro #{dungeon.intro}
        script(src="/public/js/backToPrev.js")

